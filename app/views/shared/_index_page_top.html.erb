<div class="<%= local_assigns[:edit_instance] ? "hidden" : "" %> bg-brand-light" id="<%= reflex %>">
  <div class="mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex space-x-4">
          <% unless hide_new ||= false %>
            <% if local_assigns[:new_path] %>
              <%= link_to "New", new_path, class: "btn btn-default" %>
            <% else %>
              <button autofocus type="button" class="btn btn-default"  data-reflex="click-><%= reflex %>#new">New</button>
            <% end %>
          <% end %>
          <%= content_for?(:toolbar_col_1) ? yield(:toolbar_col_1) : "" %>
          <%= content_for?(:toolbar_col_2) ? yield(:toolbar_col_2) : "" %>
          <%= content_for?(:toolbar_col_3) ? yield(:toolbar_col_3) : "" %>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <%= content_for?(:search_control_1) ? yield(:search_control_1) : "" %>
        <%= content_for?(:search_control_2) ? yield(:search_control_2) : "" %>
        <%= content_for?(:search_control_3) ? yield(:search_control_3) : "" %>
        <!-- Profile dropdown -->
        <div class="ml-3 relative">
          <div>
            <% unless hide_search ||= false %>
              <input type="search" class="input text-sm mt-2 mb-2 mr-2" id="search-input" placeholder="Search..." aria-label="Search for..." autocomplete="off" value="<%= query %>"
                data-reflex="debounced:input-><%= reflex %>#search" >
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
