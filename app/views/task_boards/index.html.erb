        <%= render "table", task_boards: @task_boards, reflex_name: "TaskBoardsReflex" %>
      </div>
    </div>
    <div>
      <%= render "shared/index_page_paginator", pagy: @pagy, reflex: "TaskBoardsReflex" %>
    </div>
  </div>
</div>

