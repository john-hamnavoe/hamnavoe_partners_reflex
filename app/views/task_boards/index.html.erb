

<div data-controller="task_boards"  id='task_boards' data-reflex-root='#task_boards'>
  <%= render "shared/page_header", title: "Task Boards" %>
  <div class="shadow mt-2 mb-4">
    <div>
      <%= render "form" if @task_board %>
      <%= render 'shared/index_page_top', edit_instance: @task_board, reflex: "TaskBoardsReflex", query: @query, hide_new: false %>
