<%= hover_table do %>
  <%= table_head do %>
    <%= table_row do %>
      <%= table_column "Position" %>
      <%= sortable_tr "task_boards.name", "ApplicationReflex","Board"%> 
      <%= sortable_tr "task_lists.name", "ApplicationReflex","List"%> 
      <%= sortable_tr "title", "ApplicationReflex" %>
      <%= sortable_tr "story_points", "ApplicationReflex", "Points"%>    
      <%= sortable_tr "due_date", "ApplicationReflex", "Due"%>              
      <%= sortable_tr "is_billable", "ApplicationReflex", "Billable?" %>         
      <%= sortable_tr "is_complete", "ApplicationReflex", "Complete?" %>    
      <%= table_column %>       
    <% end %>
  <% end %>
  <%= table_body do %>
    <% tasks.each do |task| %>
      <%= render task %>
    <% end %>
  <% end %>
<% end %>