<div class="flex flex-wrap w-full mr-4 p-4 mb-8 text-lg font-semibold text-white bg-brand rounded-lg shadow-md">
  <div class="flex items-center">
    <span><%= current_organisation.name %> Dashboard. Welcome <%= current_user.name %>. Working project is <%= current_user.current_project&.name || " no project selected " %> </span>
  </div>
</div>
<div class="flex flex-wrap">
  <% @dashboard_metrics.each do |dashboard_metric_snapshot| %>
    <%= render partial: "metric_card", locals: {dashboard_metric_snapshot: dashboard_metric_snapshot} %>
  <% end %>
</div>
<!--Divider-->
<hr class="border-b-2 border-gray-400 my-8 mx-4">
<div class="flex flex-wrap w-full p-3">
  <div class ="md:w-1/2 xl:w-1/3 pr-3"
      data-controller="content-loader"
      data-content-loader-url-value="<%= dashboard_widgets_active_tasks_path() %>"
    >
    <i class="fas fa-spinner fa-spin"></i> Loading details...
  </div>
  <div class ="md:w-1/2 xl:w-1/3 pr-3"
      data-controller="content-loader"
      data-content-loader-url-value="<%= dashboard_widgets_active_issues_path() %>"
    >
    <i class="fas fa-spinner fa-spin"></i> Loading details...
  </div>  
</div>
